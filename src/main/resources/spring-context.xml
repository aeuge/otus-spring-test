<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personDao" class="ru.otus.springexam.dao.PersonDaoKeyboard">
        <property name="defaultAge" value="28"/>
    </bean>

    <bean id="personService" class="ru.otus.springexam.service.PersonServiceImpl">
        <property name="dao" ref="personDao"/>
    </bean>

    <bean id="loadTestService" class="ru.otus.springexam.service.LoadTestServiceImpl">
    </bean>

    <bean id="examService" class="ru.otus.springexam.service.ExamServiceImpl">
    </bean>

</beans>
